{
  "name": "zhangnote",
  "private": true,
  "version": "1.0.0",
  "description": "ZhangNote - AI-powered Markdown Editor",
  "author": {
    "name": "ZhangNote Team",
    "email": "zhangnote@example.com"
  },
  "homepage": "https://github.com/zhangnote/zhangnote",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k \"vite\" \"wait-on tcp:3000 && electron .\"",
    "build": "tsc && vite build",
    "build:electron": "cross-env ELECTRON=true npm run build && tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json && node -e \"require('fs').renameSync('dist-electron/preload.js','dist-electron/preload.cjs')\"",
    "preview": "vite preview",
    "dist": "npm run build:electron && electron-builder",
    "dist:win": "npm run build:electron && electron-builder --win",
    "dist:mac": "npm run build:electron && electron-builder --mac",
    "dist:linux": "npm run build:electron && electron-builder --linux",
    "dist:linux-x64": "npm run build:electron && electron-builder --linux --x64",
    "dist:linux-arm64": "npm run build:electron && electron-builder --linux --arm64",
    "dist:kylin": "npm run build:electron && electron-builder --linux deb --x64 --arm64",
    "dist:all": "npm run build:electron && electron-builder --win --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@fontsource/ma-shan-zheng": "^5.2.8",
    "@fontsource/noto-sans-sc": "^5.2.8",
    "@fontsource/noto-serif-sc": "^5.2.8",
    "@google/genai": "^1.30.0",
    "@types/papaparse": "^5.5.0",
    "better-sqlite3": "^11.6.0",
    "clsx": "^2.1.0",
    "d3": "^7.9.0",
    "lucide-react": "^0.555.0",
    "mammoth": "^1.11.0",
    "mermaid": "^11.12.1",
    "papaparse": "^5.5.3",
    "pdfjs-dist": "^5.4.449",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/better-sqlite3": "^7.6.12",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.19.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "to-ico": "^1.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.1"
  }
}
